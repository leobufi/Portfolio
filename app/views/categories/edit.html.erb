
<div class="hero-dashboard" data-controller="list random-colors day-night-mode">
  <div class="container">
    <div class="page-padding">
      <div class="page-title">
        <h1>Éditer une catégorie</h1>
      </div>
      <div class="form">
        <%= simple_form_for(@category) do |f| %>
          <%= f.input :name %>
          <div class="form-button">
            <button>
              <%= f.submit %>
            </button>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
